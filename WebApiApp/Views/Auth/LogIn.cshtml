
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/Anonymus.cshtml";
}

<div id="loginForm" class="text-center">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <br />
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="signInEmail" class="form-control center-block " placeholder="Email" required="" autofocus="">
    <br />
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="signInPassword" class="form-control center-block" placeholder="Password" required="">
    <br />
    <button id="signin" class="btn btn-lg btn-primary">Sign in</button>
    <br />
    @Html.ActionLink("Register new account", "Register", new { area = "" }, new { @class = "text-muted" })
</div>
